--- =========================
-- EXECUTOR: PREMIUM CRATE MILESTONES
-- =========================

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- wait for attributes to exist
repeat task.wait() until player:GetAttribute("Slays") ~= nil

-- ðŸ”¢ milestones (edit freely)
local Milestones = {
    1, 2, 75, 100, 150, 200, 250, 300, 400, 500
}

local CRATE_NAME = "Premium"

-- safe getter
local function getAttr(name)
    return player:GetAttribute(name) or 0
end

-- crate grant (client-side)
local function giveCrate()
    print("[EXECUTOR] Premium crate granted")

    -- ðŸ”§ if the game uses a remote, hook it here:
    -- game.ReplicatedStorage.Remotes.GiveCrate:FireServer(CRATE_NAME)
end

-- milestone checker
local function checkMilestones()
    local slays = getAttr("Slays")
    local claimed = getAttr("CratesClaimed")

    while Milestones[claimed + 1] and slays >= Milestones[claimed + 1] do
        giveCrate()
        player:SetAttribute("CratesClaimed", claimed + 1)
        claimed += 1
    end
end

-- listen for slay changes
player:GetAttributeChangedSignal("Slays"):Connect(checkMilestones)

-- initial run
checkMilestones()
